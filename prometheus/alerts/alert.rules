groups:
  - name: Node Monitoring
    rules:

    - alert: NotInSync
      expr: cometbft_blocksync_syncing != 0
      for: 1m
      labels:
        severity: minor
      annotations:
        description: 'Node is not in sync.'

    - alert: NodeRestarted
      expr: time() - process_start_time_seconds < 60
      labels:
        severity: minor
      annotations:
        description: 'Node was restarted less than a minute ago.'

    - alert: CometTooFewPeers
      expr: cometbft_p2p_peers < 2
      for: 5m
      labels:
        severity: major
      annotations:
        description: 'The number of connected P2P peers has been below the defined threshold in the last 5 minutes.'

    - alert: GethTooFewPeers
      expr: p2p_peers < 2
      for: 5m
      labels:
        severity: major
      annotations:
        description: 'The number of connected P2P peers has been below the defined threshold in the last 5 minutes.'

    - alert: CometStalledBlocks
      expr: increase(cometbft_consensus_latest_block_height[5m]) == 0
      for: 5m
      labels:
        severity: critical
      annotations:
        description: 'Block production stalled. The node has not produced any blocks in the last 5 minutes.'

    - alert: GethStalledBlocks
      expr: increase(chain_head_block[5m]) == 0
      for: 5m
      labels:
        severity: critical
      annotations:
        description: 'Block production stalled. The node has not produced any blocks in the last 5 minutes.'

    - alert: CometNoMetricsReceived
      expr: absent(cometbft_p2p_peers) == 1
      for: 5m
      labels:
        severity: critical
      annotations:
        description: 'No metrics have been received in the last 5 minutes.'

    - alert: GethNoMetricsReceived
      expr: absent(p2p_peers) == 1
      for: 5m
      labels:
        severity: critical
      annotations:
        description: 'No metrics have been received in the last 5 minutes.'
